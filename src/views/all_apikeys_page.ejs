<% if (typeof msgDanger!='undefined') { %>
    <div class="alert alert-success">   <i class="fas fa-info"></i>   <%-msgDanger %>
  
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Kapat</span></button>
    </div>
  <% } %>
  
  <section class="section header">
      <div class="container">
        <h1 class="title">
          <img class="title-img" src="/images/ebaysoft.jpg">EBAYSOFT
        </h1>
        <p class="subtitle">
          <strong>EBAYSOFT</strong> uygulamasına hoşgeldin!!
        </p>
      </div>
      <div class="columns">
        <div class="column is-four-fifths"></div>
        <div class="column"><div class="docs">  <a href="/documentation"><button class="button is-warning"><i class="fa-solid fa-file-doc"></i>DOCS</button></a></div></div>
        <div class="column"><div class="logout"> <form action="/logout" method="post"><button class="button is-danger" type="submit"><i class="fa fa-sign-out logout-button"></i></button></form> </div></div>
      </div>
      <hr class="header-hr">
  </section>
  
  
  <section class="section" id="main-content">
    <br><br>
    <div class="card" id="main-card">
      <div class="card-header pt-2">
        <p class="title ml-5">
          <img class="title-img" src="/images/ebaysoft.jpg">  <%=user.name %> <%=user.surname %> <p class="subtitle has-text-centered mt-2 ml-2"> Apikeys</p>
        </p>
      </div>
      <div class="card-content">
        <table class="table is-hoverable is-fullwidth">
          <thead>
            <tr>
              <th>İndex</th>
              <th>Apikey ID</th>
              <th>User ID</th>
              <th>Apikey Credit Balance</th>
              <th>Apikey</th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < apikeys.length; i++ ) { %>
              <tr class='<%=(apikeys[i].userid == user.id ? "is-selected" : "") %>'>
                <th><%=i+1 %></th>
                <td>
                  <%=apikeys[i].id %>
                </td>
                <td><%=apikeys[i].userid %></td>
                <td><strong><%=apikeys[i].api_credit_balance %></strong></td>
                <td><%=apikeys[i].apikey %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <footer class="card-footer">
        <a href="/" class="card-footer-item">All Users</a>
      </footer>
    </div>
    
  </section>
  